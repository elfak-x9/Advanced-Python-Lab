    "\n",
    "\n",
    "def calculate_area(length, width):\n",
    "    area = length * width\n",
    "    return area\n",
    "\n",
    "l = float(input(\"Enter length: \"))\n",
    "w = float(input(\"Enter width: \"))\n",
    "\n",
    "result = calculate_area(l, w)\n",
    "print(\"length is:\", l)\n",
    "print(\"width is:\", w)\n",
    "print(f\"the area of the rectangle is: {result}\")\n",
